@model List<Pessoa>

@{
    ViewData["Title"] = "Pessoas";
}

<div class="mt-3">

    <h1 class="text-center">Lista de Pessoas registadas</h1>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nome</th>
                <th>Idade</th>
                <th>Cidade</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pessoa in Model)
            {
                <tr>
                    <td>@pessoa.nome</td>
                    <td>@pessoa.idade</td>
                    <td>@pessoa.cidade</td>
                </tr>
            }
        </tbody>
    </table>

</div>