@model Desafio_02_01.Models.Aluno

@{
    ViewData["Title"] = "Registar";
}

<h1>Registar Aluno</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="numero" class="control-label">Número do aluno</label>
                <input asp-for="numero" class="form-control mb-2 mt-2" />
                <span asp-validation-for="numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="nome" class="control-label">Nome do Aluno</label>
                <input asp-for="nome" class="form-control mt-2 mb-3" />
                <span asp-validation-for="nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Registar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
