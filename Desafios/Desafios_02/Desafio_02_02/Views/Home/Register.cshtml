@model Desafio_02_02.Models.User

@{
ViewData["Title"] = "Registar Utilizador";
}

<style>
form{
    max-width: 500px;
}
label{
    font-weight: bold;
}
input{
    margin: 0.5rem 0;
}
label:last-child{
    font-weight: normal;
}
</style>
<div class="container mt-3">
<h1>Registar Utilizador</h1>
<hr />
    <form asp-action="Register">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="username" class="control-label">Nome de Utilizador:</label>
            <input asp-for="username" class="form-control" placeholder="Ex. Mario98" value="@TempData["username"]" />
        <span asp-validation-for="username" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="email" class="control-label">E-mail de Utilizador</label>
        <input asp-for="email" class="form-control" placeholder="Ex. mario98@mail.com" value="@TempData["email"]" />
        <span asp-validation-for="email" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label class="control-label">Confirmar E-mail: </label>
        <input name="confirmarEmail" class="form-control" value="@TempData["confirmarEmail"]" />
        <span class="text-danger">
            @Html.ValidationMessage("confirmarEmail")
        </span>
    </div>
    <div class="form-group form-check">
        <label class="form-check-label">
                <input name="terms" class="form-check-input" asp-for="terms" />
                Li e aceito os Termos & Condições
        </label>
        <span class="text-danger">
            @Html.ValidationMessage("terms")
        </span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
    </form>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
