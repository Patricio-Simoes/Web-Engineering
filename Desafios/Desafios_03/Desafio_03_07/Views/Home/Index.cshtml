@model IEnumerable<Desafio_03_07.Models.Document>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <h1 class="text-center mt-3">List of submited files:</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Download
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        <a asp-controller="Home" asp-action="Download" asp-route-id=@item.name target="_blank">Download</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a class="btn btn-primary" asp-controller="Home" asp-action="Upload" >Upload File</a>
</div>
