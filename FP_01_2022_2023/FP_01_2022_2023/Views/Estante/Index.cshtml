@model IEnumerable<FP_01_2022_2023.Models.Jogo>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1>Lista de Jogos</h1>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.descricao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.foto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.pontuacao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.estado)
                </th>
                <th>
                    Opções
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.descricao)
                    </td>
                    <td>
                        <img src="/Imagens/@item.foto" width="100">
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.pontuacao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.estado)
                    </td>
                    @if (item.estado == true)
                    {
                        <td>
                            @if (item.pontuacao < 10)
                            {
                                <a class="btn btn-success" asp-action="Aumentar" asp-route-id="@item.id">+</a>
                            }
                            @if (item.pontuacao > 0)
                            {
                                <a class="btn btn-danger" asp-action="Diminuir" asp-route-id="@item.id">-</a>
                            }
                            <a class="btn btn-warning" asp-action="Remover" asp-route-id="@item.id">x</a>
                        </td>
                    }
                    else
                    {
                        <td></td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>
