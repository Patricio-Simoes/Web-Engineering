
@{
    ViewData["Title"] = "Submit";
}

<div class="text-center mt-3 d-flex flex-column">

    <h1>Form submission without class model</h1>

    <form method="post" action="">
        <div>
            <label class="control-label" for="name">Name:</label>
            <input class="form-control" id="name" type="text" name="name" placeholder="Ex. John" />
        </div>
        <div>
            <label class="control-label" for="age">Age:</label>
            <input class="form-control" id="age" type="text" name="age" placeholder="Ex. 21" />
        </div>
        <input class="btn btn-primary" type="submit" value="Submit" />
    </form>

</div>